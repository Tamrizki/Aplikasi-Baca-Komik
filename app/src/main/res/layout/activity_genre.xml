<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.genrePage.GenreActivity">
    <include
        android:id="@+id/compAppbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/custom_appbar_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_genre"
                style="@style/typoBig"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorDarkBlue"/>
            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="25dp"
                android:backgroundTint="@color/colorBlue"
                android:background="@drawable/custom_bg_circle10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingHorizontal="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Populer"
                style="@style/typoBig"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorDarkBlue"/>
            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="25dp"
                android:backgroundTint="@color/colorBlue"
                android:background="@drawable/custom_bg_circle10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>