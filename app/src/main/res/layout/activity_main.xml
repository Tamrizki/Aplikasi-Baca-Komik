<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context=".activity.homePage.MainActivity">
    <include
        android:id="@+id/compAppbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/custom_appbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_genre"
                style="@style/typoBig"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorDarkBlue"/>
            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/custom_bg_circle10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:clipToPadding="false"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:src="@drawable/logo_komik"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp"
                android:background="@drawable/custom_bg_circle30dp_top">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="20dp"
                        android:background="@drawable/custom_bg_recomend">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvRecomendList"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_recomend"
                        android:textColor="@color/colorWhite"
                        style="@style/typoBigBold"
                        android:background="@drawable/custom_bg_circle15dp"
                        android:backgroundTint="@color/colorOrange"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3dp"/>
                    <TextView
                        android:id="@+id/tvViewAllRecomend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        style="@style/typoSmallBold"
                        android:textColor="@color/colorBlue"
                        android:layout_alignParentRight="true"
                        android:text="@string/text_view_all"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_list_komik"
                    style="@style/typoBigBold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorDarkBlue"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_bg_circle10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvListKomik"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muat lebih"
                    android:background="@drawable/custom_bg_circle10dp"
                    android:paddingHorizontal="15dp"
                    android:backgroundTint="@color/colorYellow"
                    android:textColor="@color/colorWhite"
                    android:paddingVertical="4dp"
                    android:layout_marginVertical="15dp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>