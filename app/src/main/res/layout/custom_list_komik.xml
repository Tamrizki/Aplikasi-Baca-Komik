<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_bg_circle15dp"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="15dp"
            android:elevation="0dp">
            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/sample"/>

            <TextView
                android:id="@+id/tvChapter"
                style="@style/typoTiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="5dp"
                android:background="@drawable/custom_bg_circle10dp"
                android:backgroundTint="@color/colorOrange"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Chapter 25"
                android:textColor="@color/colorWhite" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naruto Shipudent"
            android:singleLine="true"
            android:textColor="@color/colorDarkBlue"
            style="@style/typoBig"/>
        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42 menit lalu"
            android:maxLines="1"
            android:textColor="@color/colorDarkGrey"
            style="@style/typoTiny"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>