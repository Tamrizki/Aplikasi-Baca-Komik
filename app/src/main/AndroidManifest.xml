        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.genrePage.GenreActivity" />
        <activity android:name=".activity.bacaKomik.BacaKomikActivity" />
        <activity android:name=".activity.detailKomik.DetailKomikActivity" />
        <activity android:name=".activity.recomendPage.RecomendActivity" />
        <activity android:name=".activity.homePage.MainActivity"/>
    </application>

</manifest>