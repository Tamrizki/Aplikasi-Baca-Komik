<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.detailKomik.DetailKomikActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorWhite"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <include
                android:id="@+id/compAppbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme"
                layout="@layout/custom_appbar_back"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginTop="-25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_bg_circle30dp"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/typoNormalBold"
                        android:text="-"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorOrange"/>
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_bg_circle30dp"
                        android:backgroundTint="@color/colorBlue"
                        android:text="-"
                        style="@style/typoNormalBold"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorWhite"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_below="@+id/rlCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:layout_marginTop="-30dp"
                android:paddingTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_list_chapter"
                    style="@style/typoBig"
                    android:paddingHorizontal="25dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorDarkBlue"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="25dp"
                    android:backgroundTint="@color/colorOrange"
                    android:background="@drawable/custom_bg_circle10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="25dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_bg_circle30_bottom"
                android:backgroundTint="@color/colorDarkGreyShadow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="25dp"
                    android:background="@drawable/custom_bg_circle30_bottom"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/typoSuperBigBold"
                        android:text="-"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorDarkBlue"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By "
                            android:textColor="@color/colorDarkGrey"
                            style="@style/typoSmall"/>
                        <TextView
                            android:id="@+id/tvAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="auther"
                            android:textColor="@color/colorYellow"
                            style="@style/typoSmall"/>
                    </LinearLayout>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:background="@drawable/custom_bg_circle15dp"
                        android:backgroundTint="@color/colorBlue"
                        android:layout_marginVertical="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synopsis"
                        style="@style/typoNormalBold"
                        android:layout_marginVertical="10dp"
                        android:textColor="@color/colorDarkBlue"/>
                    <TextView
                        android:id="@+id/tvSynopsis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text Synopsis"
                        style="@style/typoSmall"
                        android:textColor="@color/colorDarkGrey"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>