<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.recomendPage.RecomendActivity">
    <include
        android:id="@+id/compAppbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/custom_appbar_back"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_list_recomend"
        style="@style/typoBig"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorDarkBlue"/>
    <View
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/custom_bg_circle10dp"
        android:backgroundTint="@color/colorOrange"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecomend"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="25dp"/>
</LinearLayout>